% amdresume.sty
% Style file for customizing LaTeX documents

\ProvidesPackage{amdresume}[2024/09/08 Custom style for resumes]

%%%%%%% Document + geometry:
\RequirePackage[a4paper]{geometry}
\geometry{
    a4paper,
    top     = 0.5cm,
    bottom  = 0.5cm,
    right   = 0.5cm,
    left    = 0.5cm
}

%%%%%%% Colors:
\RequirePackage{xcolor}
\definecolor{colorr}{HTML}{3a6358}
\RequirePackage{tikz}
\usetikzlibrary{arrows}

%%%%%%% Itemize or description
\RequirePackage{enumitem}
\setlist[itemize]{
    noitemsep,
    left=0pt..1.5em
}
\setlist[description]{itemsep=0pt}
\setlist[enumerate]{align=left}

